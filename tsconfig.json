{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "src/*"
  ],
  "exclude": [
    "dist",
    "**/*.test.(tsx|ts|js|jsx)"
  ]
}
